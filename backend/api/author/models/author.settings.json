{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "name": "author"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "email": {
      "type": "email"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "posts": {
      "collection": "post"
    },
    "post": {
      "via": "author",
      "model": "post"
    }
  }
}
